<div class="card mb-2 mt-2">
    {{#if @title}}
    <div class="text-center pt-3 pb-3">
        <h3 class="font-weight-normal text-{{ @color }}"> {{ @title }}</h3>
        <h6>{{ @subtitle }}</h6>
    </div>
    {{else}}
    <div class="fa-3x text-center">
        <i class="fas fa-circle-notch fa-spin m-2"></i>
    </div>
    {{/if}}
</div>